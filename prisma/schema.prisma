model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  password String
  name     String
  role     String    @default("Member")
  messages Message[]
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  groupId   String
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  Group     Group    @relation(fields: [groupId], references: [id])
}

model Group {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String    @unique
